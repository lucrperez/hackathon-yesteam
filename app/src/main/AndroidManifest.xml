<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yesteam.adoptame">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".LostFoundActivity"
            android:label="@string/title_activity_lost_found">
        </activity>
        <activity
            android:name=".LostPetActivity"
            android:label="@string/title_activity_lost_pet"></activity>
        <activity
            android:name=".FoundPetActivity"
            android:label="@string/title_activity_found_pet"></activity>
        <activity
            android:name=".GoToActivity"
            android:label="@string/title_activity_go_to"></activity>
        <activity android:name=".AdoptaActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailPetActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDrIVskk2Calhry6YBApYt-qo-L8GDRC4s"/>

    </application>

</manifest>
